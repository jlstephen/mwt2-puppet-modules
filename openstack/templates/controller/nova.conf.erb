[DEFAULT]
enabled_apis = osapi_compute,metadata
transport_url = rabbit://openstack:<%= @rabbitmq %>@<%= @controller_mgt_ip %>
my_ip = <%= @controller_mgt_ip %>
use_neutron = True
firewall_driver = nova.virt.firewall.NoopFirewallDriver
ssl_only = true
cert = /etc/pki/tls/certs/<%= @fqdn %>.cer
key = /etc/pki/tls/private/<%= @fqdn %>.key
metadata_port = 8789
dhcp_domain =

[api]

[api_database]
connection = mysql+pymysql://nova:<%= @nova_db %>@<%= @controller_mgt_ip %>/nova_api

[barbican]
[cache]
[cells]

[cinder]
os_region_name = RegionOne

[cloudpipe]
[conductor]
[console]
[consoleauth]
[cors]
[cors.subdomain]
[crypto]

[database]
connection = mysql+pymysql://nova:<%= @nova_db %>@<%= @controller_mgt_ip %>/nova

[ephemeral_storage_encryption]
[filter_scheduler]

[glance]
api_servers = http://<%= @controller_mgt_ip %>:9292

[guestfs]
[healthcheck]
[hyperv]
[image_file_url]
[ironic]
[key_manager]

[keystone_authtoken]
auth_uri = http://<%= @controller_mgt_ip %>:5000
auth_url = http://<%= @controller_mgt_ip %>:35357
memcached_servers = <%= @controller_mgt_ip %>:11211
auth_type = password
project_domain_name = default
user_domain_name = default
project_name = service
username = nova
password = <%= @nova_user %>

[libvirt]
[matchmaker_redis]
[metrics]
[mks]

[neutron]
url = http://<%= @controller_mgt_ip %>:9696
auth_url = http://<%= @controller_mgt_ip %>:35357
auth_type = password
project_domain_name = default
user_domain_name = default
region_name = RegionOne
project_name = service
username = neutron
password = <%= @neutron_user %>
service_metadata_proxy = true
metadata_proxy_shared_secret = <%= @metadata_secret %>

[notifications]
[osapi_v21]

[oslo_concurrency]
lock_path = /var/lib/nova/tmp

[oslo_messaging_amqp]
[oslo_messaging_kafka]
[oslo_messaging_notifications]
[oslo_messaging_rabbit]
[oslo_messaging_zmq]
[oslo_middleware]
[oslo_policy]
[pci]

[placement]
os_region_name = RegionOne
project_domain_name = Default
project_name = service
auth_type = password
user_domain_name = Default
auth_url = http://<%= @controller_mgt_ip %>:35357/v3
username = placement
password = <%= @placement_user %>

[quota]
[rdp]
[remote_debug]

[scheduler]
discover_hosts_in_cells_interval = 600

[serial_console]
[service_user]
[spice]
[ssl]
[trusted_computing]
[upgrade_levels]
[vendordata_dynamic_auth]
[vmware]

[vnc]
enabled = true
vncserver_listen = $my_ip
novncproxy_host = 0.0.0.0
vncserver_proxyclient_address = $my_ip
novncproxy_base_url = https://<%= @fqdn %>:6080/vnc_auto.html

